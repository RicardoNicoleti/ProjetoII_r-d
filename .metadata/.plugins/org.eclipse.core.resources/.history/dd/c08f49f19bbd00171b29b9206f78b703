package br.edu.facear.classes;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

public class Ranking implements Comparable<Jogador> {
	private int semanal;
	private int mensal;
	private Jogador jogador;

	

	public Ranking() {

	}

	public Ranking(int semanal, int mensal) {
		this.semanal = semanal;
		this.mensal = mensal;
	}

	public int getSemanal() {
		return semanal;
	}

	public void setSemanal(int semanal) {
		this.semanal = semanal;
	}

	public int getMensal() {
		return mensal;
	}

	public void setMensal(int mensal) {
		this.mensal = mensal;
	}

	public Jogador getJogador() {
		return jogador;
	}

	public void setJogador(Jogador jogador) {
		this.jogador = jogador;
	}
	
	public void GerenciarRanking() {
		jogador = new Jogador();
		List<Jogador> j = new ArrayList<Jogador>();
		List<Jogador> listaObjectJog = jogador.Ler();
		for (Jogador jogador : listaObjectJog) {
			jogador.setNome(jogador.getNome());
			jogador.setPontos(jogador.getPontos());
				
			j.add(jogador);
			
		}
		
		System.out.println(j);
	
	}

	@Override
	public int compareTo(Jogador o) {
		jogador = new Jogador("teste", 2);
		if (jogador.getPontos() > o.getPontos()) {
	          return -1;
	     }
	     if (jogador.getPontos() < o.getPontos()) {
	          return 1;
	     }

		return 0;
	}
	
}
