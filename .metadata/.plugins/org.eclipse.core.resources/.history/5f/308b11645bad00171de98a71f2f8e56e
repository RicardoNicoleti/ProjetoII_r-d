package br.edu.facear.telas;

import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JPasswordField;
import javax.swing.border.EmptyBorder;
import javax.swing.JLabel;
import javax.swing.JTextField;
import javax.swing.JButton;
import java.awt.Font;
import java.awt.FlowLayout;

public class Login extends JFrame {

	private JPanel painel;
	private JTextField txtLogin;
	private JTextField txtSenha;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					Login login = new Login();
					login.setLocationRelativeTo(null);
					login.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	public Login() {
		setResizable(false);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 437, 302);
		painel = new JPanel();
		painel.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(painel);
		painel.setLayout(null);
		
		txtSenha = new JPasswordField();
		txtSenha.setBounds(142, 120, 174, 20);
		painel.add(txtSenha);
		txtSenha.setColumns(20);
		
		JLabel lblSenha = new JLabel("Senha");
		lblSenha.setBounds(87, 124, 41, 17);
		painel.add(lblSenha);
		lblSenha.setFont(new Font("Arial", Font.PLAIN, 14));
		
		JLabel lblLogin = new JLabel("Login");
		lblLogin.setBounds(87, 85, 35, 17);
		painel.add(lblLogin);
		lblLogin.setFont(new Font("Arial", Font.PLAIN, 14));
		
		txtLogin = new JTextField();
		txtLogin.setBounds(141, 84, 174, 20);
		painel.add(txtLogin);
		txtLogin.setColumns(20);
		
		JButton btnEntrar = new JButton("Entrar");
		btnEntrar.setBounds(141, 154, 81, 23);
		painel.add(btnEntrar);
		btnEntrar.setFont(new Font("Arial", Font.PLAIN, 14));
		
		JButton btnSair = new JButton("Sair");
		btnSair.setBounds(232, 154, 83, 23);
		painel.add(btnSair);
		btnSair.setFont(new Font("Arial", Font.PLAIN, 14));
		
		JButton btnCadastrar = new JButton("Cadastre - se aqui");
		btnCadastrar.setBounds(209, 192, 166, 23);
		painel.add(btnCadastrar);
		btnCadastrar.setFont(new Font("Arial", Font.PLAIN, 14));
		
		JLabel lblCadastrar = new JLabel("Não é cadastrado");
		lblCadastrar.setBounds(87, 195, 112, 17);
		painel.add(lblCadastrar);
		lblCadastrar.setFont(new Font("Arial", Font.PLAIN, 14));
		
		JLabel lblQuizByRd = new JLabel("Quiz by R&D");
